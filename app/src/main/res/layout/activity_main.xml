<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dustbin Status"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_margin="30dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <me.itangqi.waveloadingview.WaveLoadingView
        android:id="@+id/loading_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="100dp"

        app:wlv_borderColor="@color/colorPrimary"
        app:wlv_borderWidth="1dp"
        app:wlv_shapeType="rectangle"
        app:wlv_round_rectangle="true"
        app:wlv_triangle_direction="north"

        app:wlv_titleCenterSize="25sp"
        app:wlv_titleCenterStrokeWidth="2dp"
        app:wlv_titleCenterColor="@android:color/white"

        app:wlv_titleTopSize="25sp"
        app:wlv_titleTopStrokeWidth="2dp"
        app:wlv_titleTopColor="@android:color/white"

        app:wlv_titleBottomSize="25sp"
        app:wlv_titleBottomStrokeWidth="2dp"
        app:wlv_titleBottomColor="@android:color/white"

        app:wlv_waveAmplitude="20"
        app:wlv_waveColor="#009CFF" />

</LinearLayout>